<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#FFFFFF"
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="134dp"
                android:height="100dp"
                />
            <stroke
                android:width="3dp"
                android:color="#000000"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="10dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#999999"
                android:startColor="#999999"
                android:endColor="#999999"
                android:type="linear" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="134dp"
                android:height="100dp" />
            <stroke
                android:width="3dp"
                android:color="#000000" />
        </shape>
    </item>


</selector>