<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2A"
    android:fontFamily="@font/goyangdeogyangb"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/ImageButton_help"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_design_help"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/ImageButton_play_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ark_quiz_main"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>
        <ImageButton
            android:id="@+id/ImageButton_play_beginner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/btn_design_play_beginner"
            app:layout_constraintBottom_toTopOf="@id/ImageButton_play_intermediate"
            app:layout_constraintDimensionRatio="6:2.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ImageButton_help"
            android:layout_marginTop="30dp"></ImageButton>

        <ImageButton
            android:id="@+id/ImageButton_play_intermediate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6:2.5"
            android:background="@drawable/btn_design_play_intermediate"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ImageButton_play_beginner"
            app:layout_constraintBottom_toTopOf="@id/ImageButton_play_advanced"
            android:layout_marginTop="30dp"></ImageButton>
        <ImageButton
            android:id="@+id/ImageButton_play_advanced"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6:2.5"
            android:background="@drawable/btn_design_play_advanced"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ImageButton_play_intermediate"
            app:layout_constraintBottom_toTopOf="@id/ImageButton_play_rankingMode"
            android:layout_marginTop="30dp"></ImageButton>
        <ImageButton
            android:id="@+id/ImageButton_play_rankingMode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6:2.5"
            android:background="@drawable/btn_design_play_rankingmode"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ImageButton_play_advanced"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="30dp"></ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>