<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2E2E2A"
    android:fontFamily="@font/goyangdeogyangb">
    <TextView
        android:id="@+id/TextView_dialog_hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"></TextView>
    <TextView
        android:id="@+id/TextView_dialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/TextView_dialog_hint_title"
        app:layout_constraintTop_toBottomOf="@id/TextView_dialog_hint_title"
        app:layout_constraintBottom_toTopOf="@id/ImageView_dialog_hint"
        android:textSize="20dp"
        android:text="This is a hint."></TextView>
    <ImageView
        android:id="@+id/ImageView_dialog_hint"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></ImageView>
    <Button
        android:id="@+id/Button_dialog_hint_OK"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="OK"
        android:background="@drawable/button_background"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>