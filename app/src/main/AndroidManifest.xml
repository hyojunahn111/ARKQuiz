<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arkquiz">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/arkquiz_logo_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Shop"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuizpageTest"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuizpageHard"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuizpageNormal"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuizpageEasy"
            android:screenOrientation="portrait"/>
        <activity android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>